<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_52">

    <TextView
        android:id="@+id/spares_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        style="@style/text_single"
        android:layout_toLeftOf="@+id/spares_item_layout"
        android:layout_alignParentLeft="true"
        android:paddingLeft="@dimen/qb_px_16"
        android:textSize="14sp"
        android:textColor="@color/black"/>

        <LinearLayout
            android:id="@+id/spares_item_layout"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/spares_item_spare_parts"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/qb_px_10"
                android:paddingRight="@dimen/qb_px_10"
                android:textSize="14sp"
                android:text="@string/spare_parts"
                android:textColor="@color/title_back_text"/>

            <View
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/qb_px_1"
                android:layout_height="@dimen/qb_px_20"
                android:background="@color/blue_bg3"
                />

            <TextView
                android:id="@+id/spares_item_spare"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/qb_px_10"
                android:paddingRight="@dimen/qb_px_10"
                android:layout_marginRight="@dimen/qb_px_15"
                android:textSize="14sp"
                android:text="@string/spare"
                android:textColor="@color/title_back_text"/>

        </LinearLayout>

</RelativeLayout>
