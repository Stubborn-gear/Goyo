<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingLeft="@dimen/qb_px_14"
        android:paddingRight="@dimen/qb_px_14"
        android:gravity="center_vertical"
        android:background="@drawable/home_grid_view_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_80">

        <TextView
            android:id="@+id/home_grid_view_key"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="暂无\n暂无"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/home_grid_view_value"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="99"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/home_grid_view_comparison"
            android:layout_below="@+id/home_grid_view_value"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/qb_px_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="00.00%"
            android:textColor="@color/white"/>

    </RelativeLayout>





</RelativeLayout>
